<form role="form" method="POST" action = "/admin/matches">
  <div class="form-group">

    <label for="title">Title</label>
    <input class="form-control" type="text" name="title" id="title" placeholder="match title">
    </input>
    
    <label for="description">Description</label>
    <textarea class="form-control" type="text" name="description" id="description" placeholder="description">
    </textarea>
    </input>

    <label for="casters">Casters</label>
    <select multiple class="form-control" id="casters" name="casters">
      {{#each people}}
        <option value={{id}}>{{name}}
        </option>
      {{/each}}
    </select>
        
    <label for="event">Event</label>
    <select class="form-control" id="event" name="event">
      {{#each events}}
        <option value={{id}}>{{name}}</option>
      {{/each}}
    </select>
    
    <label for="playedAt">Date Played</label>
    <input class="form-control" type="text" name="playedAt" id="playedAt" placeholder="mm/dd/yyyy">
    </select>


    <label for="videos">Videos</label>
    <input class="form-control" type="text" name="videos" id="videos" placeholder="comma separated ids">

    <label for="game">Game</label>
    <select class="form-control" id="game" name="game">
      {{#each games}}
        <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select>

    <label for="category">Category</label>
    <select class="form-control" id="category" name="category">
        <option value="pro">Pro</option>
        <option value="scrub">Scrub</option>
        <option value="community">Community</option>
    </select>

  </div> 
  <button type="submit" class="btn btn-default">
    Create! 
  </button>
</form> 
