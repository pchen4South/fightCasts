<div class="col-md-2">
  {{> adminlist}}
</div>
<div class="col-md-4">
  {{> forms/createMatch}}
</div>
<div class ="col-md-6">
  <ul style="list-style-type:none">
  {{#each matches}} 
   <li>
   <form role = "form" method = "POST"> 
    <button formaction = "/admin/matches/{{id}}/delete"
          type = "submit"
          class = "btn btn-xs btn-default" 
          name = "id" value = {{id}}> X </button>   
    {{#if approved}}
        <img src = {{gameIcon game.name}}> </img> 
        <b>APPROVED</b>
        <button formaction = "/admin/matches/{{id}}/unapprove" type = "submit"
        class = "btn btn-xs btn-default" name = "id" value = {{id}}>
          Unapprove</button>
          Match Title: {{title}} 
    {{else}}
        <img src = {{gameIcon game.name}}> </img>
        <b>UNAPPROVED</b>
        <button formaction = "/admin/matches/{{id}}/approve" type = "submit"
        class = "btn btn-xs btn-default" name = "id" value = {{id}}>
          Approve</button>
          Match Title: {{title}} 
    </form>
    {{/if}}
    </li>
  {{/each}}
  </ul>
</div>
